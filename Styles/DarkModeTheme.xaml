<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Border Colors-->
    <SolidColorBrush x:Key="BorderBrush">#FF50505C</SolidColorBrush>
    <Color x:Key="BorderColor">#FF50505C</Color>

    <SolidColorBrush x:Key="ShadowBrush">#FF1E1E21</SolidColorBrush>
    <Color x:Key="ShadowColor">#FF1E1E21</Color>

    <!--Background Colors-->
    <SolidColorBrush x:Key="MainWindowBackground">#FF1A191C</SolidColorBrush>
    <Color x:Key="MainWindowBackgroundColor">#FF1A191C</Color>
    <SolidColorBrush x:Key="MainWindowMenu">#FF262626</SolidColorBrush>

    <SolidColorBrush x:Key="ContentHeaderBrush">#FF2B2B33</SolidColorBrush>
    <Color x:Key="ContentHeaderColor">#FF2B2B33</Color>

    <SolidColorBrush x:Key="ContentBrush">#FF262626</SolidColorBrush>
    <Color x:Key="ContentColor">#FF262626</Color>

    <SolidColorBrush x:Key="SelectedBrush">#FF50505C</SolidColorBrush>
    <Color x:Key="SelectedColor">#FF50505C</Color>

    <SolidColorBrush x:Key="IsMouseOverBrush">#FF50505C</SolidColorBrush>
    <Color x:Key="IsMouseOverColor">#FF50505C</Color>

    <SolidColorBrush x:Key="TintedContentBrush">#FF25252E</SolidColorBrush>
    <Color x:Key="TintedContentColor">#FF25252E</Color>

    <SolidColorBrush x:Key="GlyphBrush">#FF989B9F</SolidColorBrush>
    <Color x:Key="GlyphColor">#FF989B9F</Color>

    <!--Foreground Colors-->
    <SolidColorBrush x:Key="TextBrush">#FFFFFFFF</SolidColorBrush>
    <Color x:Key="TextColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="MenuTextBrush">#FFFFFFFF</SolidColorBrush>
    <Color x:Key="MenuTextColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="DisabledBrush">#FFA2B1C0</SolidColorBrush>
    <Color x:Key="DisabledColor">#FFA2B1C0</Color>

    <SolidColorBrush x:Key="InactiveBrush">#FF50505C</SolidColorBrush>
    <Color x:Key="InactiveColor">#FF50505C</Color>

    <SolidColorBrush x:Key="OnMouseOverBrush">#FFFF8C00</SolidColorBrush>
    <!-- DarkOrange -->
    <Color x:Key="OnMouseOverColor">#FFFF8C00</Color>

    <SolidColorBrush x:Key="CaretBrush">#FFFFFFFF</SolidColorBrush>
    <Color x:Key="CaretColor">#FFFFFFFF</Color>
</ResourceDictionary>
