<UserControl
    x:Class="NetworkAnalyzer.Apps.Reports.Reports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.Reports"
    xmlns:ut="clr-namespace:NetworkAnalyzer.Apps.Utilities"
    mc:Ignorable="d" 
    d:DesignHeight="755"
    d:DesignWidth="1135"
    FontSize="18"
    Foreground="{DynamicResource TextBrush}">

    <UserControl.Resources>
        <Style x:Key="ReportDataSetBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource MainWindowBackground}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Height" Value="190"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedSessionData.Mode}" Value="LatencyMonitor">
                    <Setter Property="Height" Value="380"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding SelectedSessionData.Mode}" Value="IPScanner">
                    <Setter Property="Height" Value="190"/>
                </DataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding SelectedSessionData.Mode}" Value="LatencyMonitor"/>
                        <Condition Binding="{Binding IsDateRangeChecked}" Value="True"/>
                    </MultiDataTrigger.Conditions>

                    <Setter Property="Height" Value="545"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding SelectedSessionData.Mode}" Value="LatencyMonitor"/>
                        <Condition Binding="{Binding IsAllDataChecked}" Value="True"/>
                    </MultiDataTrigger.Conditions>

                    <Setter Property="Height" Value="380"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <ut:DateTimePicker
            Grid.Column="1"
            Width="230"
            Height="350"
            Panel.ZIndex="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            IsDateTimePickerVisible="{Binding IsStartTimePickerVisible, Mode=TwoWay}"
            Focusable="False"
            Margin="0,295,37,0"
            FinalDateTimeSelection="{Binding StartTime, Mode=TwoWay}"/>

        <ut:DateTimePicker
            Grid.Column="1"
            Width="230"
            Height="350"
            Panel.ZIndex="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            IsDateTimePickerVisible="{Binding IsEndTimePickerVisible, Mode=TwoWay}"
            Focusable="False"
            Margin="0,376,37,0"
            FinalDateTimeSelection="{Binding EndTime, Mode=TwoWay}"/>

        <!--Available Session Data Card-->
        <Border
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="4"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <DockPanel>
                        <TextBox
                            DockPanel.Dock="Left"
                            Style="{StaticResource CardTemplateHeader}"
                            Text="Available Session Data"/>
                        <Button
                            Margin="0,0,5,0"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            Command="{Binding FetchAvailableSessionDataButtonCommand}"
                            Style="{StaticResource GeneralButtonTemplateNoBorder}">
                            <materialIcons:MaterialIcon Kind="Refresh" Width="25"/>
                            <Button.ToolTip>
                                <ToolTip VerticalOffset="-30" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Refresh Available Session Data"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </DockPanel>
                </Border>

                <DataGrid
                    Style="{StaticResource DataGridTemplate}"
                    ItemsSource="{Binding AvailableSessionData}"
                    SelectedItem="{Binding SelectedSessionData}"
                    AutoGenerateColumns="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    RowHeaderWidth="0"
                    RowHeight="28"
                    Margin="10,0,10,0"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    ScrollViewer.CanContentScroll="True"
                    FontSize="17">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="GUID" Binding="{Binding DisplayName}" Width="2*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Mode}" Width=".8*"/>
                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartDateTime}" Width="*"/>
                        <DataGridTextColumn Header="End Time" Binding="{Binding EndDateTime}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
        
        <!--Report Generation Options Card-->
        <Border
            Grid.Column="1"
            VerticalAlignment="Top"
            Style="{StaticResource ReportDataSetBorder}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Report Generation Options"/>
                </Border>

                <Label
                    HorizontalAlignment="Center"
                    Content="Active Session Selection"
                    Style="{StaticResource OverviewCardHeader}"/>
                <DockPanel>
                    <Label
                        DockPanel.Dock="Left"
                        HorizontalAlignment="Center"
                        Content="Type:"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock
                        DockPanel.Dock="Right"
                        Width="180"
                        Text="{Binding SelectedSessionData.Mode}"
                        HorizontalAlignment="Right"
                        TextAlignment="Center"
                        Margin="0"
                        Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                <Border
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    Margin="0,10,0,10"/>

                <!--Latency Monitor Options-->
                <Grid
                    Margin="0,0,0,30"
                    Visibility="{Binding IsLatencyMonitorReportOptionsGridVisible, Converter={StaticResource bool2VisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Content="Select User-Defined Target"
                        Margin="0,0,0,10"
                        Style="{StaticResource OverviewCardHeader}"/>

                    <ComboBox
                        Grid.Row="1"
                        Width="250"
                        Height="30"
                        DisplayMemberPath="TargetAddress"
                        ItemsSource="{Binding AvailableUserDefinedTargets}"
                        SelectedItem="{Binding SelectedUserDefinedTarget}"/>

                    <Label
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Content="Select Data Set"
                        HorizontalAlignment="Center"
                        Style="{StaticResource OverviewCardHeader}"/>

                    <StackPanel
                        Grid.Row="3"
                        Orientation="Vertical"
                        HorizontalAlignment="Center">
                        <RadioButton
                            Content="All Data"
                            IsChecked="{Binding IsAllDataChecked}"
                            HorizontalAlignment="Left"
                            GroupName="DataSet"/>
                        <RadioButton
                            Content="Date Range"
                            IsChecked="{Binding IsDateRangeChecked}"
                            HorizontalAlignment="Left"
                            GroupName="DataSet"/>
                    </StackPanel>

                    <Grid
                        Grid.Row="4"
                        Margin="0,20,0,0"
                        Visibility="{Binding IsDateRangeChecked, Converter={StaticResource bool2VisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="Select Start Time"
                            HorizontalAlignment="Center"
                            Style="{StaticResource OverviewCardHeader}"/>

                        <StackPanel
                            Grid.Row="1"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBox
                                IsReadOnly="True"
                                Width="225"
                                Text="{Binding StartTime}"
                                Style="{StaticResource RoundedTextBox}"/>
                            <Button
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Command="{Binding ShowStartTimePickerButtonCommand}"
                                Style="{StaticResource GeneralButtonTemplateNoBorder}">
                                <materialIcons:MaterialIcon Kind="CalendarMonthOutline" Width="25"/>
                            </Button>
                        </StackPanel>

                        <Label
                            Grid.Row="2"
                            Margin="0,15,0,0"
                            Content="Select End Time"
                            HorizontalAlignment="Center"
                            Style="{StaticResource OverviewCardHeader}"/>

                        <StackPanel
                            Grid.Row="3"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBox
                                IsReadOnly="True"
                                Width="225"
                                Text="{Binding EndTime}"
                                Style="{StaticResource RoundedTextBox}"/>
                            <Button
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Command="{Binding ShowEndTimePickerButtonCommand}"
                                Style="{StaticResource GeneralButtonTemplateNoBorder}">
                                <materialIcons:MaterialIcon Kind="CalendarMonthOutline" Width="25"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Button
                    Content="Generate Report"
                    Width="180"
                    Margin="0,5,0,0"
                    VerticalAlignment="Bottom"
                    Command="{Binding GenerateReportButtonCommand}"
                    Style="{StaticResource GeneralButtonTemplate}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
