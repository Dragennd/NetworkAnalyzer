<UserControl x:Class="NetworkAnalyzer.Utilities.Filter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:NetworkAnalyzer.Utilities"
             xmlns:models="clr-namespace:NetworkAnalyzer.Apps.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Height="300"
             Width="600">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="FilterTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:FilterType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Border Panel.ZIndex="1">
            <Button
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Command="{Binding CloseFilterWindowCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource GeneralButtonTemplate}">
                <materialIcons:MaterialIcon Kind="Close" Width="25"/>
            </Button>
        </Border>

        <Border
            CornerRadius="4"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource MainWindowBackground}">

            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.8*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="Filters"
                    Margin="0,0,0,15"
                    Style="{StaticResource GeneralHeader}"/>

                <!--DropDown menu for selecting the FilterType to set-->
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="30"
                    VerticalAlignment="Top"
                    Margin="10,0,10,0"
                    SelectedIndex="0"
                    ItemsSource="{Binding Source={StaticResource FilterTypeValues}}"
                    SelectedItem="{Binding SelectedFilterType,
                                   RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                <!--Section for CurrentLatency, LowestLatency, HighestLatency and AverageLatency-->
                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,0,10,10">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="CurrentLatency">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="LowestLatency">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="HighestLatency">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="AverageLatency">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <!--To-Do: Add design for this section-->
                </Border>

                <!--Section for LostPacket-->
                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,0,10,10">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="LostPacket">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <!--To-Do: Add design for this section-->
                </Border>

                <!--Section for TimeStamp-->
                <Border
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,0,10,10">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedFilterType,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Value="TimeStamp">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <!--To-Do: Add design for this section-->
                </Border>

                <!--DataGrid to display all active filters-->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Margin="10,0,10,10"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1">
                    <DataGrid
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        Foreground="{DynamicResource TextBrush}"
                        Style="{StaticResource DataGridTemplate}"
                        ItemsSource="{Binding ActiveFilters,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Filter" Binding="{Binding ActiveFilters.FilterType}" Width="*"/>
                            <DataGridTextColumn Header="Operator" Binding="{Binding ActiveFilters.FilterOperator}" Width="*"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding ActiveFilters.FilterOperator}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
