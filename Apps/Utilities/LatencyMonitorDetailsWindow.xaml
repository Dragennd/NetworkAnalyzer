<Window 
    x:Class="NetworkAnalyzer.Apps.Utilities.LatencyMonitorDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.Utilities"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    mc:Ignorable="d"
    Height="425"
    Width="450"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    Title="LatencyMonitorDetailsWindow"
    ResizeMode="NoResize"
    Background="Transparent"
    FontSize="18"
    IsHitTestVisible="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    AllowsTransparency="False"
    ShowInTaskbar="False"
    Topmost="True">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding ActualHeight, ElementName=titlebar}"
            ResizeBorderThickness="6"
            GlassFrameThickness="0"
            CornerRadius="16"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border Style="{StaticResource MainWindowTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!--Window Title Bar-->
            <Border
                x:Name="titlebar"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                MouseDown="TitleBar_MouseDown"
                Style="{StaticResource TopBarTemplate}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <!--Window Title-->
                    <Label
                        Grid.Column="0"
                        FontSize="14"
                        Content="Details Window"
                        Margin="10,0,0,0"
                        Foreground="{DynamicResource TextBrush}"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"/>

                    <!--Window Controls-->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="2"
                            Click="CloseWindow"
                            Style="{StaticResource WindowCloseTemplate}">
                            <materialIcons:MaterialIcon Kind="WindowClose" Width="20"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!--Data Card 1-->
            <Border
                Grid.Row="1"
                Margin="10,10,10,0"
                Style="{StaticResource CardTemplate}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Target Address-->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Target Address"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding TargetAddress}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <!--Target Name-->
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Target Name"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding TargetName}"
                        Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Border>

            <!--Data Card 2-->
            <Border
                Grid.Row="2"
                Margin="10,10,10,0"
                Style="{StaticResource CardTemplate}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Current Latency-->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Current Latency"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding CurrentLatency}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <!--Lowest Latency-->
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Lowest Latency"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding LowestLatency}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <!--Highest Latency-->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Highest Latency"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding HighestLatency}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <!--Average Latency-->
                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Average Latency"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding AverageLatency}"
                        Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Border>

            <!--Data Card 3-->
            <Border
                Grid.Row="3"
                Margin="10,10,10,10"
                Style="{StaticResource CardTemplate}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Is User Defined Target-->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="User Defined Target"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding IsUserDefinedTarget}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <!--Hop-->
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Hop"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Margin="0,0,5,0"
                        Text="{Binding Hop}"
                        Style="{StaticResource RoundedTextBox}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
