<UserControl
    x:Class="NetworkAnalyzer.Apps.Utilities.ManagePresets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.Utilities"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    Height="420"
    Width="360">

    <UserControl.Resources>
        <Style x:Key="PresetManagerWindowSizeControl" TargetType="Grid">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Style.Triggers>
                <DataTrigger
                    Binding="{Binding IsPresetSelected,
                              RelativeSource={RelativeSource AncestorType=UserControl},
                              Mode=TwoWay}"
                    Value="True">
                    <Setter Property="Height" Value="420"/>
                </DataTrigger>

                <DataTrigger
                    Binding="{Binding IsPresetSelected,
                              RelativeSource={RelativeSource AncestorType=UserControl},
                              Mode=TwoWay}"
                    Value="False">
                    <Setter Property="Height" Value="100"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Style="{StaticResource PresetManagerWindowSizeControl}">
        <Border Panel.ZIndex="1" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Command="{Binding ClosePresetWindowCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource GeneralButtonTemplateNoBorder}">
                <materialIcons:MaterialIcon Kind="Close" Width="25"/>
            </Button>
        </Border>

        <Border
            CornerRadius="4"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource MainWindowBackground}">

            <Border.Effect>
                <DropShadowEffect Opacity=".4"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBox Text="Preset Manager" Margin="0" Style="{StaticResource GeneralHeader}"/>

                <Grid Margin="10,20,10,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="32"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox
                        Grid.Column="0"
                        DisplayMemberPath="PresetName"
                        ItemsSource="{Binding TargetProfiles,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                        SelectedItem="{Binding SelectedPreset,
                                       UpdateSourceTrigger=PropertyChanged,
                                       RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <Button
                        Grid.Column="1"
                        Command="{Binding NewPresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplateNoBorder}">
                        <materialIcons:MaterialIcon Kind="BookPlus" Width="30"/>
                        <Button.ToolTip>
                            <ToolTip VerticalOffset="-35" Style="{StaticResource GeneralToolTipTemplate}">
                                <TextBlock Text="Create New Preset"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button
                        Grid.Column="2"
                        IsEnabled="{Binding IsPresetSelected,
                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                    Mode=TwoWay}"
                        Command="{Binding DeletePresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplateNoBorder}">
                        <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="30"/>
                        <Button.ToolTip>
                            <ToolTip VerticalOffset="-35" Style="{StaticResource GeneralToolTipTemplate}">
                                <TextBlock Text="Delete Selected Preset"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </Grid>

                <Border Style="{StaticResource FadingHorizontalDivider}"/>

                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,5,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Content="Preset Name"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource OverviewCardHeader}"/>
                    <TextBox
                        Grid.Row="1"
                        Width="275"
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsPresetSelected,
                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                    Mode=TwoWay}"
                        Text="{Binding PresetName,
                               RelativeSource={RelativeSource AncestorType=UserControl},
                               Mode=TwoWay,
                               UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource RoundedTextBox}"/>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal">
                        <Label                            
                            Content="Target Address to Add"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource OverviewCardHeader}"/>
                        <Label Margin="0" Style="{StaticResource OverviewCardHeader}">
                            <materialIcons:MaterialIcon Kind="InformationSlabCircleOutline" Width="25"/>
                            <Label.ToolTip>
                                <ToolTip VerticalOffset="-100" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock>
                                        Targets must be active and correctly formatted.<LineBreak/>
                                        (i.e. 192.168.0.1, google.com, 8.8.8.8)<LineBreak/>
                                        <LineBreak/>
                                        Each preset can hold many targets.<LineBreak/>
                                        <LineBreak/>
                                        To delete a target from a preset, hover over the<LineBreak/>target in the target list below and click the Trash Can icon.
                                    </TextBlock>
                                </ToolTip>
                            </Label.ToolTip>
                        </Label>
                    </StackPanel>
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        Grid.Row="3"
                        Margin="0,0,0,5">
                        <TextBox
                            Width="250"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding IsPresetSelected,
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        Mode=TwoWay}"
                            Text="{Binding TargetName,
                                   RelativeSource={RelativeSource AncestorType=UserControl},
                                   Mode=TwoWay,
                                   UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource RoundedTextBox}"/>

                        <Button
                            HorizontalAlignment="Right"
                            IsEnabled="{Binding IsPresetSelected,
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        Mode=TwoWay}"
                            Command="{Binding AddItemCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource GeneralButtonTemplateNoBorder}">
                            <materialIcons:MaterialIcon Kind="PlusBoxOutline" Width="25"/>
                        </Button>
                    </StackPanel>

                    <Border
                        Grid.Row="4"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">

                        <DataGrid
                            Height="110"
                            Padding="0,2,0,2"
                            HeadersVisibility="None"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            Foreground="{DynamicResource TextBrush}"
                            Style="{StaticResource DataGridTemplate}"
                            ItemsSource="{Binding SelectedPreset.TargetCollection,
                                          RelativeSource={RelativeSource AncestorType=UserControl}}">

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="{DynamicResource MainWindowBackground}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MainWindowBackground}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="4*" Binding="{Binding}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Width="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding RemoveItemCommand,
                                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource GeneralButtonTemplateNoBorder}"
                                                Visibility="{Binding Path=IsMouseOver,
                                                             RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                             Converter={StaticResource bool2VisibilityConverter}}">
                                                <materialIcons:MaterialIcon
                                                    Kind="TrashCanOutline"
                                                    Width="25"
                                                    Foreground="Red"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Button
                        Grid.Row="5"
                        Margin="0,10,0,0"
                        Command="{Binding SavePresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplateNoBorder}">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="ContentSave" Width="30"/>
                            <TextBlock Margin="3,0,0,0" Text="Save Preset" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.ToolTip>
                            <ToolTip VerticalOffset="-35" Style="{StaticResource GeneralToolTipTemplate}">
                                <TextBlock Text="Save Preset Changes"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
