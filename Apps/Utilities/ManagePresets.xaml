<UserControl x:Class="NetworkAnalyzer.Utilities.ManagePresets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:NetworkAnalyzer.Utilities"
             mc:Ignorable="d"
             Height="278"
             Width="400">

    <Grid>
        <Border Panel.ZIndex="1" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Command="{Binding ClosePresetWindowCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource GeneralButtonTemplate}">
                <materialIcons:MaterialIcon Kind="Close" Width="25"/>
            </Button>
        </Border>

        <Border
            CornerRadius="4"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource MainWindowBackground}">

            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBox Text="Presets" Margin="0" Style="{StaticResource GeneralHeader}"/>

                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                    <ComboBox
                        Width="260"
                        Height="30"
                        DisplayMemberPath="PresetName"
                        ItemsSource="{Binding TargetProfiles,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                        SelectedValue="{Binding SelectedPreset,
                                       RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    <Button
                        IsEnabled="{Binding IsNonDefaultPresetSelected,
                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                    Mode=TwoWay}"
                        Command="{Binding DeletePresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplate}">
                        <materialIcons:MaterialIcon Kind="TrashCanOutline" Width="30"/>
                    </Button>
                    <Button
                        IsEnabled="{Binding IsNonDefaultPresetSelected,
                                    RelativeSource={RelativeSource AncestorType=UserControl},
                                    Mode=TwoWay}"
                        Command="{Binding SavePresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplate}">
                        <materialIcons:MaterialIcon Kind="ContentSave" Width="30"/>
                    </Button>
                    <Button
                        Command="{Binding NewPresetCommand,
                                  RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource GeneralButtonTemplate}">
                        <materialIcons:MaterialIcon Kind="BookPlus" Width="30"/>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,10,0">
                        <Label Content="Preset Name" Style="{StaticResource OverviewCardHeader}"/>
                        <TextBox
                            Width="175"
                            HorizontalAlignment="Left"
                            IsEnabled="{Binding IsNonDefaultPresetSelected,
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        Mode=TwoWay}"
                            Text="{Binding PresetName,
                                   RelativeSource={RelativeSource AncestorType=UserControl},
                                   Mode=TwoWay,
                                   UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource RoundedTextBox}"/>

                        <Label Content="Target Address" Style="{StaticResource OverviewCardHeader}"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox
                                Width="150"
                                IsEnabled="{Binding IsNonDefaultPresetSelected,
                                            RelativeSource={RelativeSource AncestorType=UserControl},
                                            Mode=TwoWay}"
                                Text="{Binding TargetName,
                                       RelativeSource={RelativeSource AncestorType=UserControl},
                                       Mode=TwoWay,
                                       UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource RoundedTextBox}"/>
                            <Button
                                FontSize="16"
                                IsEnabled="{Binding IsNonDefaultPresetSelected,
                                            RelativeSource={RelativeSource AncestorType=UserControl},
                                            Mode=TwoWay}"
                                Command="{Binding AddItemCommand,
                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Style="{StaticResource GeneralButtonTemplate}">
                                <materialIcons:MaterialIcon Kind="PlusBoxOutline" Width="25"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <DataGrid
                        Margin="10,0,0,0"
                        Height="170"
                        Width="175"
                        HeadersVisibility="None"
                        AutoGenerateColumns="False"
                        Foreground="{DynamicResource TextBrush}"
                        ItemsSource="{Binding SelectedPreset.TargetCollection,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding}" Width="3.15*"/>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Command="{Binding RemoveItemCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource GeneralButtonTemplate}">
                                            <materialIcons:MaterialIcon
                                                Kind="TrashCanOutline"
                                                Width="25"
                                                Foreground="Red"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
