<UserControl x:Class="NetworkAnalyzer.Utilities.ManagePresets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:NetworkAnalyzer.Utilities"
             mc:Ignorable="d"
             Height="270" Width="400">

    <Grid>
        <Border Panel.ZIndex="1" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Style="{StaticResource GeneralButtonTemplate}">
                <materialIcons:MaterialIcon Kind="Close" Width="25"/>
            </Button>
        </Border>

        <Border
            CornerRadius="4"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}"
            Background="{DynamicResource MainWindowBackground}">

            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <TextBox Text="Presets" Margin="0" Style="{StaticResource GeneralHeader}"/>

                <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                    <ComboBox Width="250" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,10,0">
                        <Label Content="Preset Name" Style="{StaticResource OverviewCardHeader}"/>
                        <TextBox Width="175" Style="{StaticResource RoundedTextBox}"/>

                        <Label Content="Target Address" Style="{StaticResource OverviewCardHeader}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="145" Style="{StaticResource RoundedTextBox}"/>
                            <Button Style="{StaticResource GeneralButtonTemplate}">
                                <materialIcons:MaterialIcon Kind="PlusBoxOutline" Width="30"/>
                            </Button>
                        </StackPanel>

                        <Button FontSize="16" Margin="0,25,0,0" Style="{StaticResource GeneralButtonTemplate}">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="ContentSave" Width="25"/>
                                <TextBlock Margin="3,0,0,0" VerticalAlignment="Center" Text="Save Preset"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <ListBox Margin="10,0,0,0" Height="170" Width="175" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
