<UserControl
    x:Class="NetworkAnalyzer.Apps.LatencyMonitor.LatencyMonitor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.LatencyMonitor"
    xmlns:ut="clr-namespace:NetworkAnalyzer.Apps.Utilities"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d" 
    d:DesignHeight="755"
    d:DesignWidth="1135"
    FontSize="18"
    Foreground="{DynamicResource TextBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ut:Filter
            x:Name="FilterWindow"
            Grid.Row="2"
            Grid.Column="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Height="460"
            MinWidth="630"
            MaxWidth="900"
            Margin="30,0,30,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="10"
            Visibility="{Binding IsFilterWindowVisible, Converter={StaticResource bool2VisibilityConverter}}"
            ActiveFilters="{Binding ActiveFilters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedFilterType="{Binding SelectedFilterType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedFilterOperator="{Binding SelectedFilterOperator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedBinaryFilterOperator="{Binding SelectedBinaryFilterOperator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            FilterValue="{Binding FilterValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedUserDefinedTarget="{Binding SelectedUserDefinedTarget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedTracerouteTarget="{Binding SelectedTracerouteTarget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedActiveFilter="{Binding SelectedActiveFilter}"
            UserDefinedTargets="{Binding UserDefinedTargets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TracerouteTargets="{Binding TracerouteTargets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            ApplyFilterCommand="{Binding ApplyFilterButtonCommand}"
            RemoveFilterCommand="{Binding RemoveFilterButtonCommand}"
            SetAddressFilterCommand="{Binding SetAddressFilterButtonCommand}"
            FetchHistoryDataCommand="{Binding FetchHistoryDataButtonCommand}"
            CloseFilterWindowCommand="{Binding FilterButtonCommand}"/>

        <ut:ManagePresets
            x:Name="PresetsWindow"
            Grid.Row="1"
            Grid.Column="0"
            Grid.RowSpan="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,0,125,0"
            Panel.ZIndex="10"
            Visibility="{Binding IsPresetWindowVisible, Converter={StaticResource bool2VisibilityConverter}}"
            TargetProfiles="{Binding TargetPresets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            IsPresetSelected="{Binding IsPresetSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedPreset="{Binding SelectedPreset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            PresetName="{Binding PresetName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TargetName="{Binding TargetToAddToPreset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            NewPresetCommand="{Binding NewPresetButtonCommand}"
            SavePresetCommand="{Binding SavePresetButtonCommand}"
            DeletePresetCommand="{Binding DeletePresetButtonCommand}"
            AddItemCommand="{Binding AddItemButtonCommand}"
            RemoveItemCommand="{Binding RemoveItemButtonCommand}"
            ClosePresetWindowCommand="{Binding ManageProfilesButtonCommand}"/>

        <!--Controls Card-->
        <Border
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource CardTemplate}">
            <DockPanel>
                <Button
                    Margin="5,0,10,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Command="{Binding StartButtonCommand}"
                    Style="{StaticResource GeneralButtonTemplateNoBorder}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="Play" Width="40"/>
                        <TextBlock Margin="3,0,0,0" Text="Start" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button
                    Margin="5,0,10,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Command="{Binding StopButtonCommand}"
                    Style="{StaticResource GeneralButtonTemplateNoBorder}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="40"/>
                        <TextBlock Margin="3,0,0,0" Text="Stop" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Border
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Style="{StaticResource VerticalMenuDivider}"/>

                <Button
                    Margin="5,0,10,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Command="{Binding ShowDetailsWindowButtonCommand}"
                    Style="{StaticResource GeneralButtonTemplateNoBorder}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="SimOutline" Width="40"/>
                        <TextBlock Margin="3,0,0,0" Text="Details" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button
                    Margin="5,0,10,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Command="{Binding ClearResultsButtonCommand}"
                    Style="{StaticResource GeneralButtonTemplateNoBorder}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="FileDocumentRefreshOutline" Width="40"/>
                        <TextBlock
                            Margin="3,0,0,0"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            LineHeight="18">
                                Clear<LineBreak/>
                                Results
                        </TextBlock>
                    </StackPanel>
                </Button>

                <ComboBox
                    Margin="10,0,5,0"
                    Width="250"
                    Height="30"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    ItemsSource="{Binding TargetPresets}"
                    DisplayMemberPath="PresetName"
                    SelectedItem="{Binding SelectedPreset,
                                   Mode=TwoWay,
                                   UpdateSourceTrigger=PropertyChanged}"/>

                <RadioButton
                    Margin="5,0,5,0"
                    IsChecked="{Binding IsManageProfilesButtonChecked}"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Command="{Binding ManageProfilesButtonCommand}"
                    Style="{StaticResource MainMenuRadioButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="BookCog" Width="40"/>
                        <TextBlock
                            Margin="3,0,0,0"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            LineHeight="18">
                                Preset<LineBreak/>
                                Manager
                        </TextBlock>
                    </StackPanel>
                </RadioButton>
            </DockPanel>
        </Border>

        <!--Overview Card-->
        <Border
            Grid.Column="0"
            Grid.Row="1"
            MinWidth="450"
            MinHeight="175"
            Visibility="{Binding IsOverviewCardVisible, Converter={StaticResource bool2VisibilityConverter}}"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Overview"/>
                </Border>
                
                <DockPanel>
                    <Label Content="Report Number" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding ReportNumber}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                
                <DockPanel>
                    <Label Content="Start Time" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding StartTime}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                
                <DockPanel>
                    <Label Content="Duration" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding SessionDuration}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                
                <DockPanel>
                    <Label Content="Packets Sent" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding PacketsSent, Mode=TwoWay}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                
            </StackPanel>
        </Border>

        <!--Quickstart Card-->
        <Border
            Grid.Column="0"
            Grid.Row="1"
            MinWidth="450"
            MinHeight="175"
            Visibility="{Binding IsQuickStartCardVisible, Converter={StaticResource bool2VisibilityConverter}}"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Quickstart"/>
                </Border>

                <StackPanel Orientation="Vertical">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Enter an address to monitor in the field below, then click Start above"
                        Foreground="{DynamicResource TextBrush}"
                        Margin="0,0,0,10"/>
                    <TextBox
                        Width="300"
                        Text="{Binding QuickStartAddress}"
                        Style="{StaticResource RoundedTextBox}"/>
                    <Label
                        HorizontalAlignment="Center"
                        Content="*To monitor more than one address,"
                        FontSize="14"
                        Foreground="{DynamicResource TextBrush}"
                        Margin="0,20,0,0"/>
                    <Label
                        HorizontalAlignment="Center"
                        Content="use the Preset Manager at the top-right of the window"
                        FontSize="14"
                        Foreground="{DynamicResource TextBrush}"
                        Margin="0,-10,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Live Targets Card-->
        <Border
            Grid.Column="0"
            Grid.Row="2"
            Style="{StaticResource CardTemplate}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="User Defined Targets (Live)"/>
                </Border>

                <DataGrid
                    Grid.Row="1"
                    Style="{StaticResource DataGridTemplate}"
                    ItemsSource="{Binding LiveTargets}"
                    SelectedItem="{Binding SelectedTarget}"
                    AutoGenerateColumns="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    RowHeaderWidth="0"
                    RowHeight="28"
                    Margin="10,0,10,0"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    ScrollViewer.CanContentScroll="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Target Name" Binding="{Binding DisplayName}" Width="*"/>
                        <DataGridTextColumn Header="Current" Binding="{Binding Latency}" Width="75"/>
                        <DataGridTextColumn Header="Low" Binding="{Binding LowestLatency}" Width="60"/>
                        <DataGridTextColumn Header="High" Binding="{Binding HighestLatency}" Width="60"/>
                        <DataGridTextColumn Header="Avg" Binding="{Binding AverageLatency}" Width="60"/>
                        <DataGridTextColumn Header="Lost" Binding="{Binding TotalPacketsLost}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!--History Card-->
        <Border
            Grid.Column="{Binding HistoryGridColumn}"
            Grid.Row="{Binding HistoryGridRow}"
            Grid.ColumnSpan="{Binding HistoryGridColumnSpan}"
            Grid.RowSpan="{Binding HistoryGridRowSpan}"
            Panel.ZIndex="1"
            Style="{StaticResource CardTemplate}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardTemplateHeaderWrapper}">
                    <DockPanel>
                        <TextBox
                            DockPanel.Dock="Left"
                            Text="Target History"
                            Style="{StaticResource CardTemplateHeader}"/>

                        <Button
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Command="{Binding SetHistorySectionSizeButtonCommand}"
                            Style="{StaticResource GeneralButtonTemplateNoBorder}">
                            <materialIcons:MaterialIcon Kind="{Binding HistorySectionButtonKind}" Width="25"/>
                            <ToolTipService.ToolTip>
                                <ToolTip VerticalOffset="-30" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Resize History Section"/>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button
                            Margin="0,0,5,0"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            Command="{Binding RefreshHistoryButtonCommand}"
                            Style="{StaticResource GeneralButtonTemplateNoBorder}">
                            <materialIcons:MaterialIcon Kind="Refresh" Width="25"/>
                            <Button.ToolTip>
                                <ToolTip VerticalOffset="-30" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Refresh Filter Data"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>

                        <RadioButton
                            Margin="0,0,5,0"
                            IsChecked="{Binding IsFilterButtonChecked}"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Command="{Binding FilterButtonCommand}"
                            Style="{StaticResource MainMenuRadioButton}">
                            <materialIcons:MaterialIcon Kind="Filter" Width="25"/>
                            <ToolTipService.ToolTip>
                                <ToolTip VerticalOffset="-30" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Manage Filters"/>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </RadioButton>

                        <RadioButton
                            Margin="0,0,5,0"
                            IsChecked="{Binding IsColumnSelectorButtonChecked}"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Command="{Binding ManageColumnsButtonCommand}"
                            Style="{StaticResource MainMenuRadioButton}">
                            <materialIcons:MaterialIcon Kind="FormatColumns" Width="25"/>
                            <ToolTipService.ToolTip>
                                <ToolTip VerticalOffset="-30" Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Select Columns"/>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </RadioButton>
                    </DockPanel>
                </Border>

                <Border
                    Grid.Row="1"
                    Width="350"
                    Height="130"
                    Panel.ZIndex="1"
                    Margin="0,10,40,0"
                    Padding="5"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Visibility="{Binding IsColumnSelectorWindowVisible, Converter={StaticResource bool2VisibilityConverter}}"
                    Style="{StaticResource CardTemplate}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Grid.Column="0" Content="Target Address" IsChecked="{Binding IsTargetAddressColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" Content="Target Name" IsChecked="{Binding IsTargetNameColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="1" Grid.Column="0" Content="Current" IsChecked="{Binding IsCurrentColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" Content="Low" IsChecked="{Binding IsLowColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="2" Grid.Column="0" Content="High" IsChecked="{Binding IsHighColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" Content="Avg" IsChecked="{Binding IsAvgColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="3" Grid.Column="0" Content="Lost" IsChecked="{Binding IsLostColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" Content="Total Lost" IsChecked="{Binding IsTotalLostColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="4" Grid.Column="0" Content="TimeStamp" IsChecked="{Binding IsTimeStampColumnVisible, Mode=TwoWay}"/>
                        <CheckBox Grid.Row="4" Grid.Column="1" Content="Hop" IsChecked="{Binding IsHopColumnVisible, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <DataGrid
                    Grid.Row="1"
                    Style="{StaticResource DataGridTemplate}"
                    ItemsSource="{Binding History}"
                    AutoGenerateColumns="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    RowHeaderWidth="0"
                    RowHeight="28"
                    Margin="10,0,10,0"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    ScrollViewer.CanContentScroll="True">

                    <DataGrid.Resources>
                        <ut:BindingProxy x:Key="proxy" Data="{Binding}"/>
                    </DataGrid.Resources>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="Target Address"
                            Binding="{Binding TargetAddress, Mode=TwoWay}"
                            Visibility="{Binding Data.IsTargetAddressColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width="1.5*"/>
                        <DataGridTextColumn
                            Header="Target Name"
                            Binding="{Binding TargetName, Mode=TwoWay}"
                            Visibility="{Binding Data.IsTargetNameColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width="1.5*"/>
                        <DataGridTextColumn
                            Header="Current"
                            Binding="{Binding CurrentLatency, Mode=TwoWay}"
                            Visibility="{Binding Data.IsCurrentColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="Hop"
                            Binding="{Binding Hop, Mode=TwoWay}"
                            Visibility="{Binding Data.IsHopColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="Low"
                            Binding="{Binding LowestLatency, Mode=TwoWay}"
                            Visibility="{Binding Data.IsLowColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="High"
                            Binding="{Binding HighestLatency, Mode=TwoWay}"
                            Visibility="{Binding Data.IsHighColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="Avg"
                            Binding="{Binding AverageLatency, Mode=TwoWay}"
                            Visibility="{Binding Data.IsAvgColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="Lost"
                            Binding="{Binding FailedPing, Mode=TwoWay}"
                            Visibility="{Binding Data.IsLostColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="Total Lost"
                            Binding="{Binding TotalPacketsLost, Mode=TwoWay}"
                            Visibility="{Binding Data.IsTotalLostColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width=".7*"/>
                        <DataGridTextColumn
                            Header="TimeStamp"
                            Binding="{Binding TimeStamp, Mode=TwoWay}"
                            Visibility="{Binding Data.IsTimeStampColumnVisible,
                                        Converter={StaticResource bool2VisibilityConverter},
                                        Source={StaticResource proxy}}"
                            Width="1.5*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!--Traceroute Card-->
        <Border
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="3"
            Style="{StaticResource CardTemplate}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Traceroute Targets (Live)"/>
                </Border>

                <DataGrid
                    Grid.Row="1"
                    Style="{StaticResource DataGridTemplate}"
                    ItemsSource="{Binding Traceroute}"
                    SelectedItem="{Binding SelectedLiveTracerouteTarget}"
                    AutoGenerateColumns="False"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    RowHeaderWidth="0"
                    RowHeight="28"
                    Margin="10,0,10,0"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    ScrollViewer.CanContentScroll="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Hop" Binding="{Binding Hop}" MinWidth="50" Width="50"/>
                        <DataGridTextColumn Header="Target Name" Binding="{Binding TargetAddress}" Width="*"/>
                        <DataGridTextColumn Header="Current" Binding="{Binding Latency}" Width="75"/>
                        <DataGridTextColumn Header="Lost" Binding="{Binding TotalPacketsLost}" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
