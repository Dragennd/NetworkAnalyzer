<UserControl
    x:Class="NetworkAnalyzer.Apps.LatencyMonitor.LatencyMonitor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.LatencyMonitor"
    mc:Ignorable="d" 
    d:DesignHeight="755"
    d:DesignWidth="1135"
    FontSize="18"
    Foreground="{DynamicResource TextBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl
            x:Name="PopupWindow"
            Grid.Row="2"
            Grid.Column="0"
            Grid.RowSpan="2"
            Height="270"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!--Controls Card-->
        <Border
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource CardTemplate}">
            <DockPanel>
                <Button
                    Margin="5,0,5,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Style="{StaticResource GeneralButtonTemplate}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="Play" Width="40"/>
                        <TextBlock Text="Start" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button
                    Margin="5,0,5,0"
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Left"
                    Style="{StaticResource GeneralButtonTemplate}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="40"/>
                        <TextBlock Text="Stop" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <ComboBox
                    Margin="5,0,5,0"
                    Width="250"
                    Height="30"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right">
                    
                </ComboBox>

                <Button
                    Margin="5,0,5,0"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GeneralButtonTemplate}">
                    <materialIcons:MaterialIcon Kind="BookCog" Width="40"/>
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource GeneralToolTipTemplate}">
                            <TextBlock Text="Manage Target Presets"/>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </DockPanel>
        </Border>

        <!--Overview Card-->
        <Border
            Grid.Column="0"
            Grid.Row="1"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Grid Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Overview"/>
                </Grid>
                <DockPanel>
                    <Label Content="Report Number" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="LM02242025134123" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Start Time" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="2/24/2025 13:41" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Duration" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="00.13:47:09" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
                <DockPanel>
                    <Label Content="Packets Sent" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="103,478" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
            </StackPanel>
        </Border>

        <!--Targets Card-->
        <Border
            Grid.Column="0"
            Grid.Row="2"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Grid Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Live Targets"/>
                </Grid>
                <DataGrid Style="{StaticResource DataGridTemplate}" d:ItemsSource="{d:SampleData}"/>
            </StackPanel>
        </Border>

        <!--History Card-->
        <Border
            Grid.Column="0"
            Grid.Row="3"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Grid Style="{StaticResource CardTemplateHeaderWrapper}">
                    <DockPanel>
                        <TextBox
                            DockPanel.Dock="Left"
                            Text="History - [Target Name]"
                            Style="{StaticResource CardTemplateHeader}"/>

                        <Button
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            Style="{StaticResource GeneralButtonTemplate}">
                            <materialIcons:MaterialIcon Kind="Refresh" Width="25"/>
                            <Button.ToolTip>
                                <ToolTip Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Filter Selected Target Data"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>

                        <Button
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            Style="{StaticResource GeneralButtonTemplate}">
                            <materialIcons:MaterialIcon Kind="Filter" Width="25"/>
                            <Button.ToolTip>
                                <ToolTip Style="{StaticResource GeneralToolTipTemplate}">
                                    <TextBlock Text="Refresh Selected Target Data"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </DockPanel>
                </Grid>
                <DataGrid Style="{StaticResource DataGridTemplate}"  d:ItemsSource="{d:SampleData}">
                </DataGrid>
            </StackPanel>
        </Border>

        <!--Traceroute Card-->
        <Border
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="3"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Grid Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Traceroute"/>
                </Grid>
                <DataGrid Style="{StaticResource DataGridTemplate}"  d:ItemsSource="{d:SampleData ItemCount=24}">
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
