<UserControl x:Class="NetworkAnalyzer.Apps.LatencyMonitor.LatencyMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkAnalyzer.Apps.LatencyMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--Latency Monitor Master Grid-->
    <Grid x:Name="GridContentLatencyMonitor"
              Grid.Column="1"
              Grid.Row="1"
              Grid.RowSpan="9"
              Grid.ColumnSpan="7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>

        <!--Latency Monitor Controls-->
        <Border x:Name="GridControls"
                    Style="{StaticResource DarkModeContentTemplate}"
                    Grid.Column="1"
                    Grid.Row="0"
                    Grid.ColumnSpan="6"
                    Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".9*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Start Button-->
                <Button x:Name="BtnStart"
                            Style="{StaticResource DarkModeMenuButtonTemplate}"
                            Grid.Column="0"
                            Click="BtnStart_Click">
                    <StackPanel>
                        <Image Source="\Images\play.png" Width="20" Height="20"/>
                        <TextBlock>Start</TextBlock>
                    </StackPanel>
                </Button>

                <!--Stop Button-->
                <Button x:Name="BtnStop"
                            Style="{StaticResource DarkModeMenuButtonTemplate}"
                            IsEnabled="False"
                            Grid.Column="1"
                            Click="BtnStop_Click">
                    <StackPanel>
                        <Image Source="\Images\stop.png" Width="20" Height="20"/>
                        <TextBlock>Stop</TextBlock>
                    </StackPanel>
                </Button>

                <!--Mode Switch Button-->
                <Button x:Name="BtnModeSwitcher"
                            Style="{StaticResource DarkModeMenuButtonTemplate}"
                            Grid.Column="2"
                            Click="BtnModeSwitcher_Click">
                    <StackPanel>
                        <Image Source="\Images\switch_button.png" Width="20" Height="20"/>
                        <TextBlock>Switch Modes</TextBlock>
                    </StackPanel>
                </Button>

                <!--Generate Report Button-->
                <Button x:Name="BtnGenerateReport"
            Style="{StaticResource DarkModeMenuButtonTemplate}"
            Grid.Column="3"
            Click="BtnGenerateReport_Click">
                    <StackPanel>
                        <Image Source="\Images\generate_report.png" Width="20" Height="20"/>
                        <TextBlock>Generate Report</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!--Latency Monitor Info-->
        <Border x:Name="GridLatencyInfo"
                    Style="{StaticResource DarkModeContentTemplate}"
                    Grid.Column="8"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Packets Sent-->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Label Content="Packets Sent"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBox x:Name="TxtPacketsSent"
                                 Text="0"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 Foreground="#FFFFFF"
                                 Margin="10,0,10,2"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"/>
                </StackPanel>

                <!--Test Status-->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Label Content="Status"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBox x:Name="TxtCurrentStatus"
                                 Text="IDLE"
                                 IsReadOnly="True"
                                 Background="Transparent" 
                                 Foreground="Red"
                                 Margin="10,0,10,2"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!--User Input for Test-->
        <Border x:Name="GridUserIPInput"
                Style="{StaticResource DarkModeContentTemplate}"
                Grid.Column="1"
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Grid.RowSpan="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--User Input Header-->
                <Grid Grid.Row="0" Background="{StaticResource DarkModeControlBackgroundBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3.7*"/>
                    </Grid.ColumnDefinitions>
                    <Image
                        Source="\Images\question.png"
                        Grid.Column="0"
                        Width="18"
                        Height="18"
                        HorizontalAlignment="Right">
                        <Image.ToolTip>
                            <ToolTip
                                HasDropShadow="True"
                                Background="{StaticResource DarkModeIsMouseOverBrush}"
                                Foreground="#FFFFFF"
                                Placement="Center"
                                VerticalOffset="50"
                                HorizontalOffset="70">
                                <TextBlock TextWrapping="Wrap">
                                    Target Types Allowed:<LineBreak/>
                                    IP Address (Example: 172.30.1.24)<LineBreak/>
                                    DNS Name (Example: www.google.com)
                                </TextBlock>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>

                    <Label Grid.Column="1" Content="Targets to Scan" HorizontalAlignment="Left" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                </Grid>

                <!--User Input Fields-->
                <TextBox x:Name="TxtIPAddress01" Grid.Row="1" Style="{StaticResource DarkModeInputTextBoxTemplate}"/>
                <TextBox x:Name="TxtIPAddress02" Grid.Row="2" Style="{StaticResource DarkModeInputTextBoxTemplate}"/>
                <TextBox x:Name="TxtIPAddress03" Grid.Row="3" Style="{StaticResource DarkModeInputTextBoxTemplate}"/>
                <TextBox x:Name="TxtIPAddress04" Grid.Row="4" Style="{StaticResource DarkModeInputTextBoxTemplate}"/>
                <TextBox x:Name="TxtIPAddress05" Grid.Row="5" Style="{StaticResource DarkModeInputTextBoxTemplate}"/>
            </Grid>
        </Border>

        <!--Latency Monitor Simple Mode Layout-->
        <Border x:Name="GridSimpleMode"
                Style="{StaticResource DarkModeContentTemplate}"
                Grid.Column="5"
                Grid.Row="3"
                Grid.ColumnSpan="6"
                Grid.RowSpan="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Simple Mode Header-->
                <Grid x:Name="GridSimpleModeHeader"
                      Grid.Column="0"
                      Grid.Row="0"
                      Grid.ColumnSpan="3"
                      Background="{StaticResource DarkModeControlBackgroundBrush}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Name" Grid.Column="0" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Status" Grid.Column="1" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Latency" Grid.Column="2" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                </Grid>

                <!--Simple Mode Data Rows-->
                <Border Padding="5,0,5,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border
                            x:Name="GridDataRow1S"
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="3"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo1S" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo1S" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLatencyInfo1S" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow2S"
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo2S" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo2S" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLatencyInfo2S" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow3S"
                            Grid.Column="0"
                            Grid.Row="2"
                            Grid.ColumnSpan="3"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo3S" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo3S" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLatencyInfo3S" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow4S"
                            Grid.Column="0"
                            Grid.Row="3"
                            Grid.ColumnSpan="3"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo4S" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo4S" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLatencyInfo4S" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow5S"
                            Grid.Column="0"
                            Grid.Row="4"
                            Grid.ColumnSpan="3">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo5S" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo5S" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLatencyInfo5S" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!--Latency Monitor Detailed Mode Layout-->
        <Border 
            x:Name="GridDetailedMode"
            Grid.Column="5"
            Grid.Row="3"
            Grid.ColumnSpan="10"
            Grid.RowSpan="8"
            Visibility="Hidden"
            Style="{StaticResource DarkModeContentTemplate}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Detailed Mode Header-->
                <Grid x:Name="GridDetailedModeHeader"
                      Grid.Column="0"
                      Grid.Row="0"
                      Grid.ColumnSpan="6" 
                      Grid.RowSpan="1"
                      Background="{StaticResource DarkModeControlBackgroundBrush}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Name" Grid.Column="0" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Status" Grid.Column="1" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Lowest&#10;Latency" Grid.Column="2" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Highest&#10;Latency" Grid.Column="3" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Average&#10;Latency" Grid.Column="4" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                    <Label Content="Packets&#10;   Lost" Grid.Column="5" Style="{StaticResource DarkModeHeaderLabelTemplate}"/>
                </Grid>

                <!--Detailed Mode Data Rows-->
                <Border Padding="5,0,5,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border
                            x:Name="GridDataRow1D"
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="6"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo1D" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo1D" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLowestInfo1D" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtHighestInfo1D" Grid.Column="3" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtAverageInfo1D" Grid.Column="4" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtPacketsLostInfo1D" Grid.Column="5" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow2D"
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.ColumnSpan="6"
                            Grid.RowSpan="1"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo2D" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo2D" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLowestInfo2D" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtHighestInfo2D" Grid.Column="3" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtAverageInfo2D" Grid.Column="4" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtPacketsLostInfo2D" Grid.Column="5" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow3D"
                            Grid.Column="0"
                            Grid.Row="2"
                            Grid.ColumnSpan="6"
                            Grid.RowSpan="1"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo3D" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo3D" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLowestInfo3D" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtHighestInfo3D" Grid.Column="3" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtAverageInfo3D" Grid.Column="4" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtPacketsLostInfo3D" Grid.Column="5" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow4D"
                            Grid.Column="0"
                            Grid.Row="3"
                            Grid.ColumnSpan="6"
                            Grid.RowSpan="1"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource DarkModeControlBorderBrush}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo4D" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo4D" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLowestInfo4D" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtHighestInfo4D" Grid.Column="3" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtAverageInfo4D" Grid.Column="4" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtPacketsLostInfo4D" Grid.Column="5" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>

                        <Border
                            x:Name="GridDataRow5D"
                            Grid.Column="0"
                            Grid.Row="4"
                            Grid.ColumnSpan="6"
                            Grid.RowSpan="1">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TxtIPInfo5D" Grid.Column="0" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtStatusInfo5D" Grid.Column="1" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtLowestInfo5D" Grid.Column="2" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtHighestInfo5D" Grid.Column="3" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtAverageInfo5D" Grid.Column="4" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                                <TextBox x:Name="TxtPacketsLostInfo5D" Grid.Column="5" Grid.Row="0" Style="{StaticResource DarkModeDisplayTextBoxTemplate}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>