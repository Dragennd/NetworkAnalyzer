                           Margin="5,2,5,2" 
                           Grid.Column="0" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <Label Content="Status" 
                           Foreground="#FFFFFF" 
                           Margin="5,2,5,2"
                           Grid.Column="1" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <Label Content="Lowest&#10;Latency"
                           Foreground="#FFFFFF"
                           Margin="5,2,5,2"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <Label Content="Highest&#10;Latency"
