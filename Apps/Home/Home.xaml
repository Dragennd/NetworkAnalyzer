<UserControl 
    x:Class="NetworkAnalyzer.Apps.Home.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:NetworkAnalyzer.Apps.Home"
    mc:Ignorable="d" 
    d:DesignHeight="755"
    d:DesignWidth="1135"
    FontSize="18"
    Foreground="{DynamicResource TextBrush}">

    <UserControl.DataContext>
        <local:HomeViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Status Cards-->
        <Border
            Grid.Column="1"
            Grid.Row="0"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Network Status"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Style="{StaticResource NetworkStatusWrapper}">
                        <TextBlock Text="DNS:" Style="{StaticResource NetworkStatusHeader}"/>
                        <materialIcons:MaterialIcon Kind="{Binding DnsKind}" Margin="10,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{Binding DnsKindColor}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource NetworkStatusWrapper}">
                        <TextBlock Text="IPv4:" Style="{StaticResource NetworkStatusHeader}"/>
                        <materialIcons:MaterialIcon Kind="{Binding Ipv4Kind}" Margin="10,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{Binding Ipv4KindColor}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource NetworkStatusWrapper}">
                        <TextBlock Text="IPv6:" Style="{StaticResource NetworkStatusHeader}"/>
                        <materialIcons:MaterialIcon Kind="{Binding Ipv6Kind}" Margin="10,0,30,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{Binding Ipv6KindColor}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Device Info Card-->
        <Border
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Style="{StaticResource CardTemplate}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Device Info"/>
                </Border>

                <DockPanel>
                    <Label Content="Device Name" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding DeviceName}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Current User" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding CurrentUser}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Windows Version" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding WindowsVersion}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="BIOS Info" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding BiosInfo}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="IP Address" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding IpAddress}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Gateway Address" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding GatewayAddress}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="MAC Address" Style="{StaticResource OverviewCardHeader}"/>
                    <TextBlock Text="{Binding MacAddress}" Style="{StaticResource OverviewCardText}"/>
                </DockPanel>
            </StackPanel>
        </Border>

        <!--Changelog Card-->
        <Border
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="3"
            MinWidth="300"
            Style="{StaticResource CardTemplate}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource CardTemplateHeaderWrapper}">
                    <TextBox Style="{StaticResource CardTemplateHeader}" Text="Changelog"/>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Row="0">
                            <TextBox Text="General Notes" Style="{StaticResource GeneralHeader}"/>
                            <TextBlock Text="{Binding GeneralNotes}" Style="{StaticResource ChangeLogContent}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Row="1">
                            <TextBox Text="New Features" Style="{StaticResource GeneralHeader}"/>
                            <TextBlock Text="{Binding NewFeatures}" Style="{StaticResource ChangeLogContent}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Row="2">
                            <TextBox Text="Bug Fixes" Style="{StaticResource GeneralHeader}"/>
                            <TextBlock Text="{Binding BugFixes}" Style="{StaticResource ChangeLogContent}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
