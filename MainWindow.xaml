<Window
    x:Class="NetworkAnalyzer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:local="clr-namespace:NetworkAnalyzer"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="800"
    Width="1200"
    ResizeMode="CanMinimize"
    Background="Transparent"
    FontSize="14"
    IsHitTestVisible="True"
    Name="MainWindowForm"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    AllowsTransparency="True"
    Loaded="MainWindowForm_Loaded">

    <!--Main Form Border-->
    <Border Style="{StaticResource MainWindowTemplate}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Taskbar Icon w/ Context Menu-->
            <tb:TaskbarIcon
                x:Name="TBIcon"
                IconSource="\Images\favicon.ico"
                MenuActivation="RightClick"
                ToolTipText="Network Analyzer">

                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Show Network Analyzer">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon Kind="Eye" Width="18"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <Separator/>

                        <MenuItem Header="Exit Network Analyzer">
                            <MenuItem.Icon>
                                <materialIcons:MaterialIcon Kind="WindowClose" Width="18"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <!--Window Title Bar-->
            <Border
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                MouseDown="TitleBar_MouseDown"
                Style="{StaticResource TopBarTemplate}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <!--Window Icon and Title-->
                    <Grid Grid.Column="0">
                        <StackPanel Style="{StaticResource MainMenuButtonContentsTemplate}">
                            <Image
                                Source="\Images\favicon.ico"
                                Width="22"
                                Height="22"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"/>
                            <Label
                                Content="Network Analyzer"
                                Foreground="{DynamicResource TextBrush}"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!--Window Controls-->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Click="MinimizeWindow"
                            Style="{StaticResource WindowMinimizeTemplate}">
                            <materialIcons:MaterialIcon Kind="WindowMinimize" Width="20"/>
                        </Button>

                        <Button
                            Grid.Column="1"
                            Click="CloseWindow"
                            Style="{StaticResource WindowCloseTemplate}">
                            <materialIcons:MaterialIcon Kind="WindowClose" Width="20"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            
            <!--Main Menu-->
            <Border
                Grid.Column="0"
                Grid.Row="1"
                Style="{StaticResource MainMenuTemplate}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="70"/>
                    </Grid.RowDefinitions>

                    <!--Home Button-->
                    <RadioButton
                        Grid.Row="0"
                        x:Name="BtnHome"
                        GroupName="MainMenuButton"
                        Checked="HomeButton_Checked"
                        Style="{StaticResource MainMenuRadioButton}">
                        <materialIcons:MaterialIcon Kind="Home" Width="40"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Style="{StaticResource MainMenuToolTipTemplate}">
                                <TextBlock Text="Home"/>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </RadioButton>

                    <!--Latency Monitor Button-->
                    <RadioButton
                        Grid.Row="1"
                        GroupName="MainMenuButton"
                        Checked="LatencyMonitorButton_Checked"
                        Style="{StaticResource MainMenuRadioButton}">
                        <materialIcons:MaterialIcon Kind="Monitor" Width="40"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Style="{StaticResource MainMenuToolTipTemplate}">
                                <TextBlock Text="Latency Monitor"/>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </RadioButton>

                    <!--IP Scanner Button-->
                    <RadioButton
                        Grid.Row="2"
                        GroupName="MainMenuButton"
                        Checked="IPScannerButton_Checked"
                        Style="{StaticResource MainMenuRadioButton}">
                        <materialIcons:MaterialIcon Kind="MagnifyScan" Width="40"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Style="{StaticResource MainMenuToolTipTemplate}">
                                <TextBlock Text="IP Scanner"/>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </RadioButton>

                    <!--Reports Button-->
                    <RadioButton
                        Grid.Row="4"
                        GroupName="MainMenuButton"
                        Checked="ReportsButton_Checked"
                        Style="{StaticResource MainMenuRadioButton}">
                        <materialIcons:MaterialIcon Kind="FileChart" Width="40"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Style="{StaticResource MainMenuToolTipTemplate}">
                                <TextBlock Text="Reports"/>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </RadioButton>

                    <!--Settings Button-->
                    <RadioButton
                        Grid.Row="5"
                        GroupName="MainMenuButton"
                        Checked="SettingsButton_Checked"
                        Style="{StaticResource MainMenuRadioButton}">
                        <materialIcons:MaterialIcon Kind="CogOutline" Width="40"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Style="{StaticResource MainMenuToolTipTemplate}">
                                <TextBlock Text="Settings"/>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </RadioButton>
                </Grid>
            </Border>

            <!--Content Control for All Features-->
            <ContentControl x:Name="MainContentControl" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </Border>
</Window>
